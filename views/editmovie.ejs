<body>
	<div id="templatemo_background_section_top">
    
    	<div class="templatemo_container">
		
        	<div id="templatemo_header">
				<div id="templatemo_logo_section">            
		        	<h1><a href="index.ejs">Video Library</a></h1>               
					<h2>Store for all movies: Comedy, Thriller, Action, Romantic, Documentary</h2>
				</div>
				<div id="templatemo_user_section">            
		        	Welcome User!!
				</div>
         	</div><!-- end of headder -->
               <div id="templatemo_menu_panel"> 
				<div id="templatemo_menu_section">
					
						<ul>
						  <li><a href="createmember.ejs">Create member    </a></li>
						  <li><a href="listmember.ejs">List Members   </a></li>
						  <li><a href="/createmovie">Create Movie   </a></li>
						  <li><a href="/listmovie">List Movies   </a></li>
						  <li><a href="issuemovie.ejs">Issue Movie   </a></li>
						  <li><a href="submitmovie.ejs">Submit Movie  </a></li>  
						  <li><a href="generatebill.ejs">Generate Bill  </a></li> 
							
						</ul> 
						
					</div>
             </div> <!-- end of menu -->
		</div><!-- end of container-->
        
	</div><!-- end of templatemo_background_section_top-->
    
    <div id="templatemo_background_section_middle">
    
    	<div class="templatemo_container">
        
        	<div id="templatemo_left_section">
            	
                <div class="templatemo_post">
                
                	<div class="templatemo_post_top">
                    	<h1>Create Movie</h1>
                    </div>
                    <div class="templatemo_post_mid">
                    	<form method="POST" action="/editmovie-submit">
                    	<% console.log(movie); %>
                    	<table border="0">
							<tbody>
							
							<tr>
							<td><label for="mname">Movie Name*: </label> </td>
							<td><input id="mname" maxlength="100" name="mname" type="text" value="<%=movie.movie_name%>"/> </td>
							</tr>
							
							<tr>
							<td><label for="banner">Movie Banner: </label> </td>
							<td><input id="banner" maxlength="45" name="banner" type="text" value="<%=movie.movie_banner%>"/> </td>
							</tr>
							
							<tr>
							<td><label for="releasedate">Release Date: </label> </td>
							<td><input id="releasedate" name="releasedate" type="text" value="<%=movie.release_date%>"/></td>
							</tr>

							<tr>
							<td><label for="category">Category: </label> </td>
							<td><!--<input id="category" maxlength="75" name="category" type="text" />-->
							
							<select id ="category" name="category">
							<option value="">Select</option>
							<% for(var i=0;i<categories.length;i++) { 
								if(movie.category == categories[i]) {
								%>	<option value="<%=categories[i]%>" selected><%=categories[i]%></option>
								<% } else { %>
								<option value="<%=categories[i]%>"><%=categories[i]%></option>
							<% } } %>
							</select>
							
							 </td>
							</tr>
							
							<tr>
							<td><label for="rentamount">Rent Amount: </label> </td>
							<td><input id="rentamount" maxlength="25" name="rentamount" type="text" style="width:80px" value="<%=movie.rent_amount%>"/> </td>
							</tr>
							
							<tr>
							<td><label for="copies">Number of Copies: </label> </td>
							<td><input id="copies" maxlength="5" name="copies" type="text" style="width:40px" value="<%=movie.available_copies%>"/> </td>
							</tr>
							
							<tr><td></td>
							</tr>
							<tr>
							<td align="right"><input name="Submit" type="submit" value="Submit" /></td>
							</tr>
				
							</tbody></table>
                			<input type="hidden" name="movieId" value="<%=movie.movie_id%>"/>
                           </form>
                           <%
                            if(editedresults!=null)
                            	{
                           %>
                           <h1 style="color:yellow;">Movie Successfully Edited</h1>
                           <%
                       			}
                           %>   
                           
                                           
                    </div>
                    <div class="templatemo_post_bottom">
                    
                    	<span class="post">Posted By: SJSU Students</span>
                        <span class="post">Category: <a href="#">Web Design</a></span>
                    </div>
                    
				</div><!-- end of templatemo_post-->
                
            </div><!-- end of left section-->
            
            
        </div><!-- end of container-->
	</div><!-- end of background middle-->
    
     
<div align=center>Created by SJSU Spring 2014 students for CMPE 273 Class Project</div></body>

