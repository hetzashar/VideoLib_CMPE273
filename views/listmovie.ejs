<body>
	<div id="templatemo_background_section_top">
    
    	<div class="templatemo_container">
		
        	<div id="templatemo_header">
				<div id="templatemo_logo_section">            
		        	<h1><a href="index.ejs">Video Library</a></h1>          
					<h2>Store for all movies: Comedy, Thriller, Action, Romantic, Documentary</h2>
				</div>
				<div id="templatemo_user_section">            
		        	Welcome User!!
				</div>
         	</div><!-- end of headder -->
               <div id="templatemo_menu_panel"> 
				<div id="templatemo_menu_section">
					
					<ul>
					  <li><a href="createmember.ejs">Create member    </a></li>
					  <li><a href="listmember.ejs">List Members   </a></li>
					  <li><a href="/createmovie">Create Movie   </a></li>
					  <li><a href="/listmovie">List Movies   </a></li>
					  <li><a href="issuemovie.ejs">Issue Movie   </a></li>
					  <li><a href="submitmovie.ejs">Submit Movie  </a></li>  
					  <li><a href="generatebill.ejs">Generate Bill  </a></li> 							
					</ul> 
						
					</div>
             </div> <!-- end of menu -->
		</div><!-- end of container-->
        
	</div><!-- end of templatemo_background_section_top-->
    
    <div id="templatemo_background_section_middle">
    
    	<div class="templatemo_container">
        
        	<div id="templatemo_left_section">
            	
                <div class="templatemo_post">
                
                	<div class="templatemo_post_top">
                    	<h1>List Movies: This Section lists all the movies and allows to edit and delete the same</h1>
                    </div>
                    <div class="templatemo_post_mid">
                    <form method="POST" action="/listmovie-submit">
						<p>Filter movies based on criteria below</p>     
						<table style="margin-left:150px"><tr><td>
							<table border="0">
							<tbody>
							
							<tr>
							<td><label for="mname">Movie Name: </label> </td>
							<td><input id="mname" maxlength="100" name="mname" type="text" /> </td>
							</tr>
							
							<tr>
							<td><label for="banner">Movie Banner: </label> </td>
							<td><input id="banner" maxlength="45" name="banner" type="text" /> </td>
							</tr>
							
							<tr>
							<td><label for="releasedate">Release Date: </label> </td>
							<td><!--<input id="releasedate" name="releasedate" type="date"/>-->
							<select id ="releasedate" name="releasedate">
							<option value="">Select</option>
							<% for(var i=0;i<releaseDates.length;i++) { %>
								<option value="<%=releaseDates[i].release_date %>"><%=releaseDates[i].release_date %></option>
							<% } %>
							</select>
							</td>
							</tr>
							<tr><td></td>
							</tr>
							</tbody></table>
						</td>
						<td>
							<table border="0">
							<tbody>
							
							<tr>
							<td><label for="category">Category: </label> </td>
							<td><!--<input id="category" maxlength="75" name="category" type="text" />--> 
							<select id ="category" name="category">
							<option value="">Select</option>
							<% for(var i=0;i<categories.length;i++) { %>
								<option value="<%=categories[i]%>"><%=categories[i]%></option>
							<% } %>
							</select>
							</td>
							</tr>
							
							<tr>
							<td><label for="rentamount">Rent Amount: </label> </td>
							<td><input id="rentamountmin" maxlength="25" name="rentamountmin" type="text" style="width:80px"/>
							<input id="rentamountmax" maxlength="25" name="rentamountmax" type="text" style="width:80px"/> </td>
							</tr>
							
							<tr>
							<td><label for="copies">Is Available: </label> </td>
							<td><input id="isAvaliable" type="checkbox" name="isAvailable" value="isAvailable"> </td>
							</tr>
							
							<tr><td></td>
							</tr>
							</tbody></table>
						</tr></table>
                        <table>
						</table> 
						<div><input name="Filter" type="submit" value="Filter" style="width:50px; align:right; margin-left:800px"/></div>
					</form>	
					
					<!-- This div lists down all the movies / searched movies -->
					<div class="infinite-scroll">	
                    <!-- List to display -->
                    <% if(movies != null && movies.length > 0) {
              
                    	for(var i=0;i<movies.length;i++) {
                    	//console.log(movies[i].movie_id);
                    %>		
                                        
                    <%= movies[i].movie_name %>
                    <%= movies[i].movie_banner %>
                    <%= movies[i].release_date %>
                    <%= movies[i].rent_amount %>
                    <%= movies[i].available_copies %>
                    <%= movies[i].category %>
                    <a href="/editmovie/<%=movies[i].movie_id %>">Edit</a>
                    <a href="/deletemovie/<%=movies[i].movie_id %>">Delete</a>
                    <br/>
                    <br/>
                    <% } } %>
                    </div>
                    
                    
                    </div>
                    <div class="templatemo_post_bottom">
                    
                    	<span class="post">Posted By: SJSU Students</span>
                        <span class="post">Category: <a href="#">Web Design</a></span>
                    </div>
                    
				</div><!-- end of templatemo_post-->
                
            </div><!-- end of left section-->
            
            
        </div><!-- end of container-->
	</div><!-- end of background middle-->
    
     
